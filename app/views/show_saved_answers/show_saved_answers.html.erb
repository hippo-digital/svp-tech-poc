<% content_for :title do %><%= t("show_saved_answers.title") %><% end %>
<% content_for :meta_tags do %>
  <meta name="description" content="<%= t("show_saved_answers.title") %>" />
<% end %>

<%= render "govuk_publishing_components/components/title", {
  title: t("show_saved_answers.title"),
  margin_top: 0,
  margin_bottom: 3,
} %>

<%= tag.p t("show_saved_answers.description"), class: "govuk-body" %>

<%= render "answers_summary" %>

<%= form_tag({},
  "data-module": "track-svp-form-people-check_your_answers",
  "id": "check_your_answers",
  "novalidate": "true"
) do %>
  <%= render "govuk_publishing_components/components/button",
    text: t("show_saved_answers.submit"),
    margin_bottom: true %>
<% end %>

<%= render "govuk_publishing_components/components/button", {
        text: "Logout",
        href: logout_path
} %>

